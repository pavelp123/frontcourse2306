{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "indent": ["error", "tab"],
    "no-plusplus": 0,
    "no-param-reassign": 0,
    "no-tabs": 0
  }
}
